        //        alert('Readig');
                itemsIdsForRead = [];
                var $head = $Elem.parent();
                itemsIdsForRead.push($head.prop('id'));
                console.log('$head' + $head.prop('id'));
                var $branches = $head.find('div.wrapBlock');
                console.log($branches);
