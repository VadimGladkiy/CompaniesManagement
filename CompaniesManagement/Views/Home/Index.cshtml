                        str.push ( '<li>' + value.Name + ' | ' +
                            value.AnnualEarnings + '</li>');
                        str.push('<li> depended companies: </li>');
                    } else
                    {
                        str.push( '<li>' + value.Name+ '|'+value.AnnualEarnings+ ' ;' + '</li>');
                    }
                    //console.log(str);
                });
                return str;
            }
